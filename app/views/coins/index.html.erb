<div id="coins">
  <% @coins.each do |coin| %>
    <%= render coin %>
    <p>
      <%= link_to t("links.edit"), coin, class:"btn btn-secondary" %> |
      <%= link_to t("links.show"), edit_coin_path(coin), class:"btn btn-success" %> |
      <%= link_to t("links.delete"), coin, method: :delete, form: { data: { turbo_confirm: t("links.confirmation")}}, class:"btn btn-danger" %>
    </p>
  <% end %>
</div>
<br>
<br>
<%= link_to t("links.new_coin"), new_coin_path, class:"btn btn-primary" %> |
<%= link_to t("links.back"), welcome_index_path, class:"btn btn-warning" %>
