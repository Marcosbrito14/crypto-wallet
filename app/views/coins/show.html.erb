<p style="color: green"><%= notice %></p>

<form>
  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, Coin.human_attribute_name(:url_image) %>
    <%= text_field_tag nil, @coin.url_image, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
    <%= text_field_tag nil, @coin.mining_type.description, class:"form-control", disabled: true %>
  </div>
</form>

<%#= render @coin %>
<br>
<div>
  <%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-secondary" %> |
  <%= link_to t('links.back'), coins_path, class:"btn btn-warning" %>
  <br>
  <br>
  <%= button_to t('links.delete'), @coin, method: :delete, class:"btn btn-danger" %>
</div>
