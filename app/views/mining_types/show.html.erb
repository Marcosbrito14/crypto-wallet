<p style="color: green"><%= notice %></p>

<form>
  <div class="form-group">
    <%= label_tag nil, MiningType.human_attribute_name(:description) %>
    <%= text_field_tag nil, @mining_type.description, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, MiningType.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @mining_type.acronym, class:"form-control", disabled: true %>
  </div>
</form>

<%#= render @mining_type %>
<br>
<div>
  <%= link_to t('links.edit'), edit_mining_type_path(@mining_type), class:"btn btn-secondary" %> |
  <%= link_to t('links.back'), mining_types_path, class:"btn btn-warning" %>
  <br>
  <br>
  <%= button_to t('links.delete'), @mining_type, method: :delete, class:"btn btn-danger" %>
</div>
